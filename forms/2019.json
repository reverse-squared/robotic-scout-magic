{
    "$schema": "../form-schema.json",
    "id": "2019",
    "icon": "space-shuttle",
    "name": "2019 Destination: Deep Space",
    "hidden": true,
    "description": "Blast off with scouting with this form.",
    "items": [
        {
            "type": "number",
            "label": "The Team / Robot Number",
            "exportLabel": "Team Number"
        },
        {
            "type": "header",
            "label": "Sandstorm Period"
        },
        {
            "type": "radio",
            "label": "What game piece did the robot start with?",
            "options": [
                "Hatch Panel",
                "Cargo"
            ],
            "exportLabel": "Starting Game Piece"
        },
        {
            "type": "boolean",
            "label": "Did the robot leave the HAB?",
            "default": false,
            "exportLabel": "Left HAB During Sandstorm?"
        },
        {
            "type": "counter",
            "label": "How many Hatch Panels were scored during the sandstorm period?",
            "exportLabel": "Hatch Panels Scored in Sandstorm"
        },
        {
            "type": "counter",
            "label": "How much Cargo was scored during the sandstorm period?",
            "exportLabel": "Cargo Stored in Sandstorm"
        },
        {
            "type": "header",
            "label": "Teleop Period"
        },
        {
            "type": "counter",
            "label": "How many Hatch Panels were scored?",
            "exportLabel": "Hatch Panels Scored"
        },
        {
            "type": "counter",
            "label": "How much Cargo was scored?",
            "exportLabel": "Cargo Scored"
        },
        {
            "type": "boolean",
            "label": "Can the robot pick hatch panels off the ground?",
            "exportLabel": "Can Pick Hatch Panels Off Ground?"
        },
        {
            "type": "header",
            "label": "End Game"
        },
        {
            "type": "radio",
            "label": "What level did the robot climb to at the end of the match?",
            "options": ["0 (Wasn't in the HAB)", "1", "2", "3"],
            "exportLabel": "Level Climbed"
        },
        {
            "type": "boolean",
            "label": "Can the robot even climb to level three. If you are not sure, select No.",
            "exportLabel": "Could the Robot Climb to Level 3?"
        },
        {
            "type": "text-area",
            "label": "Other notes.",
            "helperText": "Anything else the robot did or has. Did it have a ramp? Did it defend well? Was the transition from the Sandstorm to Teleop fast?",
            "exportLabel": "Notes"
        }
    ]
}
