{
    "$schema": "../form-schema.json",
    "hidden": true,
    "id": "example",
    "name": "Example Form",
    "description": "Starter Example Form",
    "items": [
        {
            "type": "header",
            "label": "Text Fields"
        },
        {
            "type": "text",
            "label": "Default"
        },
        {
            "type": "text",
            "label": "With Helper Text",
            "helperText": "Enter whatever!"
        },


        {
            "type": "header",
            "label": "Number Text Fields"
        },
        {
            "type": "number",
            "label": "Default"
        },
        {
            "type": "number",
            "label": "With Helper Text",
            "helperText": "Enter whatever!"
        },
        {
            "type": "number",
            "label": "With Error Text",
            "helperText": "Enter whatever!",
            "errorText": "That is not a number!"
        },


        {
            "type": "header",
            "label": "Booleans (Yes/No boxes)"
        },
        {
            "type": "boolean",
            "label": "Default"
        },
        {
            "type": "boolean",
            "label": "True Default",
            "default": true
        },
        {
            "type": "boolean",
            "label": "False Default",
            "default": false
        },
        {
            "type": "boolean",
            "label": "Different Labels and Colors",
            "trueValue": "Purple",
            "falseValue": "Green",

            "trueColor": "purple",
            "falseColor": "green"
        },

        {
            "type": "header",
            "label": "Counters"
        },
        {
            "type": "counter",
            "label": "Default Counter"
        },
        {
            "type": "counter",
            "label": "Minimum and Maximum (0-10)",
            "min": 0,
            "max": 10
        },
        {
            "type": "counter",
            "label": "Starting Value",
            "min": 0,
            "max": 10,
            "default": 5
        },
        {
            "type": "counter",
            "label": "Step by 5",
            "min": 0,
            "max": 100,
            "default": 50,
            "step": 5
        },
        {
            "type": "counter",
            "label": "No minimum value (min: null)",
            "min": null
        },

        {
            "type": "header",
            "label": "Checkboxes"
        },
        {
            "type": "radio",
            "label": "Default",
            "options": [
                "A",
                "B",
                "C"
            ]
        },
        {
            "type": "radio",
            "label": "Default Value",
            "options": [
                "A",
                "B",
                "C"
            ],
            "default": 1
        },

        {
            "type": "header",
            "label": "Checkboxes"
        },
        {
            "type": "checkbox",
            "label": "This is a checkbox"
        },
        {
            "type": "checkbox",
            "label": "This is another checkbox"
        },
        {
            "type": "checkbox",
            "label": "This one is default selected",
            "default": true
        },
        
        {
            "type": "header",
            "label": "Text Areas",
            "description": "Same as Text Field, but with more than one line"
        },
        {
            "type": "text-area",
            "label": "Default"
        },
        {
            "type": "text-area",
            "label": "With Helper Text",
            "helperText": "Make sure to use the multiple lines with the Enter button."
        },

        {
            "type": "header",
            "label": "Date"
        },
        {
            "type": "date",
            "label": "Select the Date"
        },

        {
            "type": "header",
            "label": "Dropdowns"
        },
        {
            "type": "dropdown",
            "label": "Select your favorite letter.",
            "options": [
                "A",
                "B",
                "C"
            ]
        },

        {
            "type": "header",
            "label": "Time"
        },
        {
            "type": "time",
            "label": "Select the Time"
        }

    ]
}
